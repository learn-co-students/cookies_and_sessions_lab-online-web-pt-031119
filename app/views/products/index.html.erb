<h1>Items In Cart</h1>

<ul>
<%= cart.each do |item| %>

	<li><%= item %></li>

<% end %>
</ul>


<h3>Add Items to Cart</h3>

<%= form_tag({controller: "products", action: "add", method: "post" }) do %>

      <%= label_tag 'Product to Add' %>
      <%= text_field_tag 'product', :product %>
      <br /> <br />

      <%= submit_tag "add to cart" %>

<% end %>
