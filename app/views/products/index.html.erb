<h1>Your Products</h1>

<ul>
    <% cart.each do |product| %>
        <li><%= product %></li> 
    <% end %> 
</ul>

<form action='/' method="POST"> 
  <label>Product:</label><br>
  <input type="text" id="product" name="product"><br>
  <input type="submit" value="add to cart">
</form> 
 

